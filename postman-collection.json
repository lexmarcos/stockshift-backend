{
  "name": "Stockshift Auth API",
  "description": "Authentication endpoints for Stockshift Backend",
  "requests": [
    {
      "name": "1. Login - Admin",
      "method": "POST",
      "url": "http://localhost:8080/api/v1/auth/login",
      "headers": [
        {
          "name": "Content-Type",
          "value": "application/json"
        }
      ],
      "body": {
        "mimeType": "application/json",
        "text": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
      }
    },
    {
      "name": "2. Login - Manager",
      "method": "POST",
      "url": "http://localhost:8080/api/v1/auth/login",
      "headers": [
        {
          "name": "Content-Type",
          "value": "application/json"
        }
      ],
      "body": {
        "mimeType": "application/json",
        "text": "{\n  \"username\": \"manager\",\n  \"password\": \"manager123\"\n}"
      }
    },
    {
      "name": "3. Login - Seller",
      "method": "POST",
      "url": "http://localhost:8080/api/v1/auth/login",
      "headers": [
        {
          "name": "Content-Type",
          "value": "application/json"
        }
      ],
      "body": {
        "mimeType": "application/json",
        "text": "{\n  \"username\": \"seller\",\n  \"password\": \"seller123\"\n}"
      }
    },
    {
      "name": "4. Refresh Token",
      "method": "POST",
      "url": "http://localhost:8080/api/v1/auth/refresh",
      "headers": [
        {
          "name": "Content-Type",
          "value": "application/json"
        }
      ],
      "body": {
        "mimeType": "application/json",
        "text": "{\n  \"refreshToken\": \"PASTE_YOUR_REFRESH_TOKEN_HERE\"\n}"
      }
    },
    {
      "name": "5. Logout",
      "method": "POST",
      "url": "http://localhost:8080/api/v1/auth/logout",
      "headers": [
        {
          "name": "Content-Type",
          "value": "application/json"
        }
      ],
      "body": {
        "mimeType": "application/json",
        "text": "{\n  \"refreshToken\": \"PASTE_YOUR_REFRESH_TOKEN_HERE\"\n}"
      }
    },
    {
      "name": "6. Test - Public Endpoint",
      "method": "GET",
      "url": "http://localhost:8080/api/v1/test/public"
    },
    {
      "name": "7. Test - Authenticated Endpoint",
      "method": "GET",
      "url": "http://localhost:8080/api/v1/test/authenticated",
      "headers": [
        {
          "name": "Authorization",
          "value": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE"
        }
      ]
    },
    {
      "name": "8. Test - Admin Only",
      "method": "GET",
      "url": "http://localhost:8080/api/v1/test/admin",
      "headers": [
        {
          "name": "Authorization",
          "value": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE"
        }
      ]
    },
    {
      "name": "9. Test - Manager Only",
      "method": "GET",
      "url": "http://localhost:8080/api/v1/test/manager",
      "headers": [
        {
          "name": "Authorization",
          "value": "Bearer PASTE_YOUR_ACCESS_TOKEN_HERE"
        }
      ]
    }
  ]
}
